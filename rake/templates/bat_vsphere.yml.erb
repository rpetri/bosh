---
cpi: vsphere
properties:
  uuid: <%= director_uuid %>
  static_ip: <%= ip %>
  pool_size: 1
  stemcell:
    name: bosh-stemcell
    version: <%= stemcell_version %>
  instances: 1
  mbus: nats://nats:0b450ada9f830085e2cdeff6@<%= ip %>:4222
  network:
    cidr: <%= net_cidr %>
    reserved:
      - <%= microbosh_ip %>
      - <%= net_reserved_admin %>
      <% net_reserved.each do |reserved| %>
      - <%= reserved %>
      <% end %>
      - <%= net_static_bosh %>
    static:
      - <%= net_static_bat %>
    gateway: <%= gateway %>
    vlan: <%= net_id %>
